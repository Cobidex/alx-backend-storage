// This script adds a new attribute to documents with the name "Holberton school" in the "school" collection.

// Get the database name from the command line arguments
var dbName = "mydatabase"; // replace with the actual database name

// Connect to the default MongoDB instance on localhost and select the database
var client = new Mongo();
var db = client.getDB(dbName);

// Update documents with name="Holberton school"
db.school.update(
  { name: "Holberton school" },
  { $set: { address: "972 Mission street" } },
  { multi: true }
);
